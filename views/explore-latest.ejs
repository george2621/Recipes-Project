<h1 class='pb-4'>Explore Latest</h1>


<div class="row row-cols-2 row-cols-lg-4 g-2 8-1g-3">

    <% if(exploreLatest !='' ) { %>
        <% exploreLatest.forEach((item)=> { %>

            <a href="/recipe/<%-item._id %>" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                    <img src="img/<%-item.image %>" alt="<%-item.name %>" Loading="lazy">
                </div>
                <div class="pt-1">
                    <%-item.name %>
                </div>
            </a>
            <% }) %>
                <% } else {%>
                    <p>No item found.</p>
                    <% } %>
</div>